<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="aasa.aasa.hangman.GameoverActivity"
    tools:showIn="@layout/activity_gameover">

    <!--<aasa.aasa.hangman.TextClass-->
        <!--android:id="@+id/game_over_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:gravity="center"-->
        <!--android:padding="10dp"-->
        <!--android:text="GAME OVER"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="50sp" />-->

    <ImageView
        android:id="@+id/game_over_title"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/game_over"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_over_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#576069"
        android:padding="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <aasa.aasa.hangman.TextClass
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Score : "
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/scoreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <aasa.aasa.hangman.TextClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Total Game : "
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/no_of_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <aasa.aasa.hangman.TextClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Total Win : "
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/no_of_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <aasa.aasa.hangman.TextClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Total Lose : "
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/no_of_lose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/go_replay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_circle"
            android:scaleType="fitXY"
            android:src="@drawable/replay" />

        <ImageButton
            android:id="@+id/go_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_circle"
            android:scaleType="fitXY"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/go_leaderboard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_circle"
            android:scaleType="fitXY"
            android:src="@drawable/leaderboard" />

        <ImageButton
            android:id="@+id/go_volume"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_circle"
            android:scaleType="fitXY"
            android:src="@drawable/volume" />
    </LinearLayout>

</RelativeLayout>
