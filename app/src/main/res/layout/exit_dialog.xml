            android:layout_height="@dimen/exit_title_image_height"
            android:src="@drawable/exit_title"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/exit_close"
            android:layout_width="@dimen/exit_close_btn_size"
            android:layout_height="@dimen/exit_close_btn_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <aasa.aasa.hangman.TextClass
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/exit_dialog_text_margin_top"
        android:gravity="center"
        android:padding="5dp"
        android:text="Are you want to exit ?"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/yes_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/yes_btn"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_marginLeft="30dp"/>

        <ImageButton
            android:id="@+id/no_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/no_btn"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_marginRight="30dp"/>

